<?xml version="1.0"?>

<Form Width="240" Height="320" Caption="Plane Details">
  <Panel Height="26">
    <Label Caption="Registration:" X="2" Y="6" Height="-2" Width="88" />
    <Button Name="RegistrationButton" X="90" Y="2" Width="-2" Height="-2" OnClick="RegistrationClicked"/>
  </Panel>

  <Panel Height="26">
    <Label Caption="Comp. ID:" X="2" Y="6" Height="-2" Width="88" />
    <Button Name="CompetitionIDButton" X="90" Y="2" Width="-2" Height="-2" OnClick="CompetitionIDClicked"/>
  </Panel>

  <Panel Height="26">
    <Label Caption="Type:" X="2" Y="6" Height="-2" Width="88" />
    <Button Name="TypeButton" X="90" Y="2" Width="-2" Height="-2" OnClick="TypeClicked"/>
  </Panel>

  <Panel Height="26">
    <Label Caption="Handicap:" X="2" Y="6" Height="-2" Width="88" />
    <Edit Name="HandicapEdit" X="90" Y="2" Width="-2" Height="-2">
      <DataField DataType="double" DisplayFormat="%.0f %%" EditFormat="%.0f" Min="50" Max="150" Step="1" />
    </Edit>
  </Panel>

  <Panel Height="26">
    <Label Caption="Polar:" X="2" Y="6" Height="-2" Width="88" />
    <Button Name="PolarButton" X="90" Y="2" Width="-2" Height="-2" OnClick="PolarClicked"/>
  </Panel>

  <Panel Height="26">
    <Label Caption="Wing Area:" X="2" Y="6" Height="-2" Width="88" />
    <Edit Name="WingAreaEdit" X="90" Y="2" Width="-2" Height="-2">
      <DataField DataType="double" DisplayFormat="%.1f m&#178;" EditFormat="%.1f" Min="0" Max="20" Step="0.1" />
    </Edit>
  </Panel>
  
  <Panel Height="26">
    <Label Caption="Max. Ballast:" X="2" Y="6" Height="-2" Width="88" />
    <Edit Name="MaxBallastEdit" X="90" Y="2" Width="-2" Height="-2">
      <DataField DataType="double" DisplayFormat="%.0f l" EditFormat="%.0f" Min="0" Max="500" Step="5" />
    </Edit>
  </Panel>

  <Panel Height="26">
    <Label Caption="Dump Time:" X="2" Y="6" Height="-2" Width="88" />
    <Edit Name="DumpTimeEdit" X="90" Y="2" Width="-2" Height="-2">
      <DataField DataType="double" DisplayFormat="%.0f s" EditFormat="%.0f" Min="10" Max="300" Step="5" />
    </Edit>
  </Panel>
  
  <Panel Height="26">
    <Label Caption="Max. Cruise Speed:" X="2" Y="6" Height="-2" Width="88" />
    <Edit Name="MaxSpeedEdit" X="90" Y="2" Width="-2" Height="-2">
      <DataField DataType="double"  DisplayFormat="%.0f %s" EditFormat="%.0f" Min="0" Max="300" Step="5" />
    </Edit>
  </Panel>
  
  <Panel Y="-30">
    <Button Caption="Okay" Y="0" Width="120" OnClick="OkayClicked" />
    <Button Caption="Cancel" X="-120" Y="0" OnClick="CancelClicked" />
  </Panel>
</Form>
