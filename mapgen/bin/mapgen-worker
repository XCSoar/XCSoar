#!/usr/bin/python

import sys, os

app_dir = os.path.abspath(__file__ + '/../..')
sys.path.append(app_dir + '/lib')

from xcsoar.mapgen.worker import Worker

def main():
    worker = Worker(dir_jobs=app_dir + '/jobs',
                    dir_data=app_dir + '/data',
		    dir_temp=app_dir + '/tmp',
	            mail_server='localhost')
    worker.run()

if __name__ == '__main__':
    main()
