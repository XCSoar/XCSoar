#!/usr/bin/python

import sys, os

app_dir = os.path.abspath(__file__ + '/../..')
sys.path.append(app_dir + '/lib')

import cherrypy
from xcsoar.mapgen.server import Server

def main():
    cherrypy.quickstart(Server(dir_jobs=app_dir + '/jobs'), '/', {
        '/static': {
            'tools.staticdir.on': True,
            'tools.staticdir.dir': app_dir + '/lib/xcsoar/mapgen/static',
        },
        '/favicon.ico': {
            'tools.staticfile.on': True,
            'tools.staticfile.filename': app_dir + '/lib/xcsoar/mapgen/static/favicon.ico',
        }
    })

if __name__ == '__main__':
    main()
