#!/bin/bash

CPUS=$(lscpu -p | tail -n1 | cut -f1 -d,)
(( CPUS++ ))
cd /opt/xcsoar || exit 1

case "${1}" in
      "ANDROID")
        make TARGET="${1}" -j "${CPUS}"
      ;;
      "DOCS")
        make manual -j "${CPUS}"
      ;;
      "KOBO")
        make TARGET="${1}" -j"${CPUS}" libs
        make TARGET="${1}" -j"${CPUS}"
        make TARGET="${1}" -j"${CPUS}" output/KOBO/KoboRoot.tgz
      ;;
      "UNIX")
        make TARGET="${1}" -j"${CPUS}" all
      ;;
      "UNIX-SDL")
        make TARGET="UNIX" -j"${CPUS}" all OPENGL=n ENABLE_SDL=y USE_SDL2=y
      ;;
      "PC")
        make TARGET="${1}" -j"${CPUS}" all
      ;;
      "WIN64")
        make TARGET="${1}" -j"${CPUS}" all
      ;;
      *)
        echo "No target specified. Valid targets: ANDROID DOCS KOBO UNIX UNIX-SDL PC"
        exit 1
      ;;
esac
